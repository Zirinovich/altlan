{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
        "src/components/*",
        "src/redux/*"
      ]
    },
    "moduleResolution": "node",
    "allowJs": true,
    "useBabel": true,
    "noResolve": true
  },
  "exclude": [
    "node_modules",
    "public"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}