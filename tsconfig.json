{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "moduleResolution": "node",
    "allowJs": true,
    "useBabel": true
  },
  "exclude": [
    "node_modules",
    "public"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}